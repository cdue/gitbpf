# First, find git-bpf install path in order to include common functions
if [ -z $GITBPF_DIR ]; then
	export GITBPF_DIR=$(dirname "$(which git-bpf | sed -e 's,\\,/,g')")
fi

# load common functionality
. "$GITBPF_DIR/gitbpf-common"

